<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12">
        <div class="well">
        <h4> Reviews: </h4>
        <% if current_user %>
          <% puts "Current User: #{@current_user}" %>
          <%= form_for [@product, Review.new] do |form| %>

          <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class: 'form-control' %>
          </div>

          <div class="form-group">
          <%= form.label :rating %>
          <%= form.select :rating, [1,2,3,4,5] %>

          <%= form.hidden_field :product_id, :value => @product.id %>
          <%= form.submit "Post Review" %>
          <% end %>

        <% end %>

          <div class="panel panel-default products">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>Rating</th>
                  <th>Description</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
          <% @reviews.each do |review| %>
            <tr>
              <td>
                <%= review.rating %>/5
              </td>
              <td>
                <%= review.description %>
              </td>
              <td>
                <% if current_user = review.user_id %>
                  <%= link_to "Delete", [review], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
                <% end %>
              </td>
            </tr>
          <% end %>
          </div>
        </div>
      </div>
    </div>

  </article>

</section>
